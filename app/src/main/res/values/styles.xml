<resources>

    <!-- Base application theme. -->
    <style name="Theme.What" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="materialAlertDialogTheme">@style/Widget.What.MaterialAlertDialog</item>
    </style>

    <style name="Widget.What.MaterialAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert.Bridge">
        <item name="android:buttonBarPositiveButtonStyle">@style/Widget.What.PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.What.Button.TextButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.What.PositiveButton</item>
    </style>

    <style name="Widget.What.PositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Widget.What.TextView.CustomFont" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/autowide</item>
    </style>

    <style name="Widget.What.TextView.CustomFont.Logo">
        <item name="android:textColor">@color/logoColor</item>
    </style>

    <style name="TextAppearance.What.Headline.CustomFont" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/autowide</item>
    </style>

    <style name="Widget.What.TextInput.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/textColor</item>
    </style>

    <style name="Widget.What.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.What.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/textColor</item>
        <item name="backgroundTint">@color/backgroundColor</item>
        <item name="elevation">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.What.TextInput.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/textColor</item>
    </style>
</resources>
