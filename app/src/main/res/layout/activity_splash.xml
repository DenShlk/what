<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:activity=".ui.SplashActivity"
    android:padding="20dp"
    android:background="@color/colorPrimary"
    android:id="@+id/splash_layout">

    <TextView
        style="@style/Widget.What.TextView.CustomFont"
        android:id="@+id/slogan_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/slogan_text_2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:text="@string/slogan_text1"
        android:textSize="@dimen/splash_slogan_text_size" />

    <TextView
        style="@style/Widget.What.TextView.CustomFont"
        android:id="@+id/slogan_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/slogan_text2"
        android:textAlignment="center"
        android:textSize="@dimen/splash_slogan_text_size" />

</RelativeLayout>